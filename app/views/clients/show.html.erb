<%- model_class = Client -%>
<div class="page-header">
  <h1><%= 'Cliente' %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Nombre:</strong></dt>
  <dd><%= @client.first_name %></dd>
  <dt><strong>Apellido:</strong></dt>
  <dd><%= @client.last_name %></dd>
  <dt><strong>Telefono:</strong></dt>
  <dd><%= @client.phone %></dd>
  <dt><strong>Email:</strong></dt>
  <dd><%= @client.email %></dd>
  <dt><strong>Direccion:</strong></dt>
  <dd><%= @client.address %></dd>
  <dt><strong>Fecha de Nacimiento:</strong></dt>
  <dd><%= @client.birthdate %></dd>
  <dt><strong>Fecha de Pago:</strong></dt>
  <dd><%= @client.paymentdate %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              clients_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_client_path(@client), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              client_path(@client),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
